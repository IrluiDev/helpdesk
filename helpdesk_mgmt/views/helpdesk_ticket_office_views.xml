<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_ticket_office_search" model="ir.ui.view">
        <field name="name">helpdesk.ticket.office.search</field>
        <field name="model">helpdesk.ticket.office</field>
        <field name="arch" type="xml">
            <search string="Ticket office Search">
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
                <separator />
                <field name="name" filter_domain="[('name', 'ilike', self)]" />
            </search>
        </field>
    </record>
    <record id="view_helpdesk_ticket_office_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.office.form</field>
        <field name="model">helpdesk.ticket.office</field>
        <field name="arch" type="xml">
            <form string="office">
                <header>
                </header>
                <sheet>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        text="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_helpdesk_ticket_office_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.office.tree</field>
        <field name="model">helpdesk.ticket.office</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="name" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>
</odoo>
